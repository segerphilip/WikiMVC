<div class="bs-docs-section">
	<div class="row">
		<div class="col-lg-l2">
			<div class="page-header">
				<h1>Search</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
		<div class="bs-component">
		<div class="list-group">
			{{#each page in controller}}
				{{#if page.id}}
					{{#link-to 'page' page classNames="list-group-item"}}{{page.title}}{{/link-to}}
				{{/if}}
			{{/each}}
			{{#unless controller.length}}
				<p>No results with that title could be found.</p>
			{{/unless}}
		</div>
		</div>
		</div>
	</div>
</div>